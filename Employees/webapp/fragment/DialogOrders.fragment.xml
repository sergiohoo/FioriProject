<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog title="{i18n>orders}">
        <content>
            <Table items="{odataNorthwind>Orders}" width="700px">
                <columns>
                    <Column >
                        <header>
                            <Label text="{i18n>orderID}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>freight}"></Label>
                        </header>
                    </Column>
                    <Column >
                        <header>
                            <Label text="{i18n>shipAddress}"></Label>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Label text="{odataNorthwind>OrderID}"></Label>
                            <Label text="{odataNorthwind>Freight}"></Label>
                            <Label text="{odataNorthwind>ShipAddress}"></Label>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>close}" press="onCloseOrdersDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>