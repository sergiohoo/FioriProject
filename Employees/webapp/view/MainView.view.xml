<mvc:View
        controllerName="logaligroup.Employees.controller.MainView"
        xmlns:mvc="sap.ui.core.mvc"
        displayBlock="true"
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <HBox >
                            <Label id="labelEmployee" labelFor="inputEmployee" text="{i18n>labelEmployee}" class="sapUiSmallMargin" />
                            <Input id="inputEmployee"
                                    value="{/EmployeeId}"
                                    maxLength="6" width="200px"
                                    class="sapUiSmallMarginEnd" />
                            <Label id="labelCountry" labelFor="slCountry" text="{i18n>labelCountry}" class="sapUiSmallMargin" />
                            <Select id="slCountry" selectedKey="{/CountryKey}" forceSelection="false" items="{path:'/ListCountry'}"
                                        class="sapUiSmallMarginEnd">
                                    <items>
                                        <core:Item key="{Key}" text="{Text}"></core:Item>
                                    </items>
                            </Select>
                            <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://search"
                                    press="onFilter" class="sapUiSmallMarginEnd" />
                            <Button id="btnClearFilter" text="{i18n>btnClearFilter}" icon="sap-icon://clear-filter"
                                    press="onClearFilter" class="sapUiSmallMarginEnd" />
                        </HBox>
                        <HBox >
                            <Panel>
                                <Table id="tableEmployee" items="{path:'/Employees'}">
                                    <columns>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableId}" />
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableName}" />
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCountry}" />
                                            </header>
                                        </Column>
                                        <Column>
                                            <header>
                                                <Label text="{i18n>tableCity}" />
                                            </header>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem >
                                            <cells>
                                                <Label text="{EmployeeID}" />
                                                <Label text="{LastName}, {FirstName}" />
                                                <Label text="{Country}" />
                                                <Label text="{City}" />
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </HBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
